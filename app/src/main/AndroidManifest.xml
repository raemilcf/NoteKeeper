<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.noteactivity" >

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher_notekeeper"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_notekeeper_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NoteActivity"
        tools:targetApi="31" >

        <activity
            android:name=".NoteListActivity"
            android:exported="true"
            android:theme="@style/Theme.NoteActivity.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".NoteActivity"
            android:exported="false"
            android:theme="@style/Theme.NoteActivity.NoActionBar" />

    </application>

</manifest>